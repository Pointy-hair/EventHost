@model EventHost.Web.Models.Events.EditEventViewModel

@{
    ViewData["Title"] = "Edit event";
}

<form asp-action="Edit" asp-route-id="@Model.Id">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @await Html.PartialAsync("_EditForm", Model)

    <button type="submit" class="btn btn-primary">Save event</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $('#Description').kendoEditor({
                tools: ['bold', 'italic', 'underline', 'strikethrough', 'insertUnorderedList', 'insertOrderedList', 'indent', 'outdent',
                    'createLink', 'unlink'],
                resizable: {
                    content: true,
                    toolbar: true
                },
                encoded: false,
                pasteCleanup: {
                    span: true,
                    keepNewLines: true,
                    css: true
                }
            });
        });
    </script>
}
